<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home"
        android:background="@drawable/background">

    <Button
            android:id="@+id/buttonBack"
            android:layout_width="119dp"
            android:layout_height="79dp"
            android:layout_marginStart="28dp"
            android:text="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonCamera"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonPanier"
            android:layout_marginTop="76dp" />

    <ImageButton
            android:id="@+id/imageButtonPanier"
            android:layout_width="114dp"
            android:layout_height="112dp"
            android:layout_marginStart="252dp"
            android:contentDescription="PanierLogo"
            android:padding="20dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/panierlogo"
            android:background="#6200ED"
            android:layout_marginEnd="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="266dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageButton
            android:id="@+id/imageButtonCamera"
            android:layout_width="136dp"
            android:layout_height="123dp"
            android:contentDescription="CameraLogo"
            android:padding="20dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logoqr"
            android:background="#6200ED"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonPanier"
            android:layout_marginStart="93dp"
            app:layout_constraintStart_toEndOf="@+id/buttonBack"
            android:layout_marginEnd="35dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
            android:layout_width="253dp"
            android:layout_height="85dp"
            app:srcCompat="@drawable/hometitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="69dp" />

</androidx.constraintlayout.widget.ConstraintLayout>